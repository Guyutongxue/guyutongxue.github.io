---
export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="d-flex p-4 rounded-xl shadow-md">
  <a href={href}>
    <h2 class="text-lg font-bold">
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      <slot />
    </p>
  </a>
</li>
