{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "title": "List of Projects",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "title": "Project Name"
            },
            "lang": {
                "type": "string",
                "title": "Programming language"
            },
            "img": {
                "type": "string",
                "title": "Showing Image"
            },
            "discription": {
                "type": "string",
                "title": "A brief discription to the project"
            },
            "link": {
                "type": "string",
                "title": "Link to the homepage"
            },
            "update": {
                "type": "string",
                "format": "date",
                "title": "The recent update time"
            },
            "github": {
                "type": "string",
                "pattern" : "^[^/]+/[^/]+$",
                "title": "The GitHub repository by user/repo"
            }
        },
        "required": [
            "name", "img", "lang"
        ]
    }
}